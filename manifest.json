{
	"manifest_version": 2,
	"name": "ForgeAI Chrome Extension",
	"version": "1.0",
	"description": "Generate text using OpenAI API",
	"browser_action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_idle"

		}
	],
	"background": {
		"scripts": ["aiFetch.js", "background.js"],
		"persistent": false
	},
	"permissions": [
		"activeTab",
		"storage"
	]
}

